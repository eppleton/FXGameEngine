    <name>hello-world</name>

    <repositories>
        <repository>
            <id>java.net</id>
            <name>Java.net</name>
            <url>https://maven.java.net/content/repositories/snapshots/</url>
            <snapshots>
            </snapshots>
        </repository>
        <repository>
            <id>netbeans</id>
            <name>NetBeans</name>
            <url>http://bits.netbeans.org/maven2/</url>
        </repository>
